
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<!DOCTYPE html>
<html>
<body>

    <h2>HTML Forms</h2>

    <form method="post" enctype="multipart/form-data" asp-controller="Calculator" asp-action="Index">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="exampleInputEmail1">First Number</label>
            <input type="text" name="num1" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Number ">

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Last Number</label>
            <input type="text" name="num2" class="form-control" id="exampleInputPassword1" placeholder="Last Name">
        </div>


        <input type="submit" value="Submit">
        <hr />
        @ViewBag.Name
    </form>



</body>
</html>
